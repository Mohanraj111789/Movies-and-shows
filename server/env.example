# MongoDB Connection
# Local MongoDB (if you're using a local instance)
# MONGODB_URI=mongodb://localhost:27017/moviehunt

# MongoDB Atlas (recommended for production)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/?retryWrites=true&w=majority&appName=<app-name>

# Example with placeholders:
# MONGODB_URI=mongodb+srv://mohantsk381:<password>@cluster0.qorjl8u.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Server Port
PORT=5000

# Environment
NODE_ENV=development